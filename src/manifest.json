{
  "manifest_version": 3,
  "name": "Text Highlighter",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-disabled.png",
      "48": "images/icon-disabled.png",
      "128": "images/icon-disabled.png"
    }
  },
  "icons": {
    "16": "images/icon-disabled.png",
    "48": "images/icon-disabled.png",
    "128": "images/icon-disabled.png"
  }
}
